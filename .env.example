# =============================================================================
# Shadow Orders - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Inco Network (FHE Layer)
INCO_RPC_URL=https://api.rivest.inco.org/
INCO_CHAIN_ID=9090
INCO_EXPLORER_URL=https://explorer.rivest.inco.org/

# Base Sepolia (Uniswap V4 Layer) - Inco Lightning is on Base Sepolia
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
BASE_SEPOLIA_CHAIN_ID=84532
BASE_SEPOLIA_EXPLORER_URL=https://sepolia.basescan.org/

# Fallback/Alternative RPC endpoints
ALCHEMY_API_KEY=your_alchemy_api_key_here
INFURA_API_KEY=your_infura_api_key_here

# =============================================================================
# CONTRACT ADDRESSES - BASE SEPOLIA (Inco Lightning)
# =============================================================================

# Inco Singleton Contract
INCO_SINGLETON_ADDRESS=0x# Get from Inco docs

# Uniswap V4 Core Contracts
POOL_MANAGER_ADDRESS=0x# PoolManager singleton
STATE_VIEW_ADDRESS=0x86e8631a016f9068c3f085faf484ee3f5fdee8f2
POSITION_MANAGER_ADDRESS=0x# PositionManager contract

# Universal Router & Quoter
UNIVERSAL_ROUTER_ADDRESS=0x66a9893cC07D91D95644AEDD05D03f95e1dBA8Af
QUOTER_V2_ADDRESS=0x# For quote calculations

# Permit2 (Gasless Approvals)
PERMIT2_ADDRESS=0x000000000022D473030F116dDEE9F6B43aC78BA3

# =============================================================================
# DEPLOYED SHADOW ORDERS CONTRACTS
# =============================================================================

# Shadow Orders Hook (to be deployed)
SHADOW_ORDERS_HOOK_ADDRESS=0x

# Test Pool (ETH/USDC with ShadowOrdersHook)
TEST_POOL_KEY_CURRENCY0=0x0000000000000000000000000000000000000000
TEST_POOL_KEY_CURRENCY1=0x# USDC on Base Sepolia
TEST_POOL_KEY_FEE=3000
TEST_POOL_KEY_TICK_SPACING=60
TEST_POOL_KEY_HOOKS=0x# ShadowOrdersHook address

# =============================================================================
# PRIVATE KEYS & ACCOUNTS
# =============================================================================

# Deployer account (for contract deployment)
DEPLOYER_PRIVATE_KEY=0xYourPrivateKeyHere

# Keeper bot account (for executing orders)
KEEPER_PRIVATE_KEY=0xYourKeeperPrivateKeyHere

# Test user accounts (for testing)
USER1_PRIVATE_KEY=0x
USER2_PRIVATE_KEY=0x

# =============================================================================
# KEEPER BOT CONFIGURATION
# =============================================================================

# Execution parameters
KEEPER_POLL_INTERVAL_MS=12000
KEEPER_MAX_GAS_PRICE_GWEI=50
KEEPER_MIN_PROFIT_USD=5

# Price oracle settings
PRICE_ORACLE_SOURCE=keeper
PRICE_ORACLE_UPDATE_INTERVAL_MS=10000

# Chainlink price feeds (if using Chainlink)
CHAINLINK_ETH_USD_FEED=0x# ETH/USD price feed
CHAINLINK_USDC_USD_FEED=0x# USDC/USD price feed

# =============================================================================
# INCO FHE CONFIGURATION
# =============================================================================

# Fee payment strategy (contract_paid or user_paid)
FHE_FEE_PAYMENT_STRATEGY=contract_paid

# Fee amounts (in wei) - inco.getFee() = 0.0001 ETH per operation
FHE_OPERATION_FEE_WEI=100000000000000
FHE_CONTRACT_PREFUND_AMOUNT_ETH=1.0

# Operations requiring fees per order creation
# newEuint256 x2 (price, amount) = 2 operations = 0.0002 ETH
FHE_ORDER_CREATION_FEE_WEI=200000000000000

# =============================================================================
# GAS & TRANSACTION SETTINGS
# =============================================================================

# Gas limits
GAS_LIMIT_CREATE_ORDER=500000
GAS_LIMIT_EXECUTE_ORDER=800000
GAS_LIMIT_CANCEL_ORDER=200000

# Transaction settings
TX_CONFIRMATION_BLOCKS=2
TX_TIMEOUT_SECONDS=300

# =============================================================================
# TESTING & DEVELOPMENT
# =============================================================================

# Foundry test settings
FOUNDRY_PROFILE=default
FOUNDRY_FUZZ_RUNS=256
FOUNDRY_INVARIANT_RUNS=256

# Mock mode (for local testing without actual FHE)
MOCK_FHE_ENABLED=false

# Debug logging
DEBUG=true
LOG_LEVEL=info

# Test parameters
TEST_ORDER_SIZE_ETH=0.01
TEST_LIMIT_PRICE_USDC=3000

# =============================================================================
# SUBGRAPH & INDEXING
# =============================================================================

# The Graph API (for indexing positions)
GRAPH_API_KEY=your_graph_api_key_here
UNISWAP_V4_SUBGRAPH_URL=https://gateway.thegraph.com/api/subgraphs/id/EoCvJ5tyMLMJcTnLQwWpjAtPdn74PcrZgzfcT5bYxNBH

# Alternative: Custom indexer endpoint
CUSTOM_INDEXER_URL=http://localhost:8080

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Wallet Connect
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# =============================================================================
# API KEYS & EXTERNAL SERVICES
# =============================================================================

# Block explorers (for verification)
BASESCAN_API_KEY=your_basescan_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key

# Tenderly (for debugging)
TENDERLY_ACCESS_KEY=your_tenderly_access_key
TENDERLY_PROJECT_SLUG=your_project_slug

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Webhook for alerts
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email alerts
ALERT_EMAIL=your-email@example.com

# =============================================================================
# HACKATHON DEMO SETTINGS
# =============================================================================

# Demo mode parameters
DEMO_MODE=true
DEMO_AUTO_EXECUTE_DELAY_MS=5000
DEMO_FAKE_PRICE_MOVEMENT=true
